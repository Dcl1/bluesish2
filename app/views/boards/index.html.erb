<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<%= link_to 'New Board', new_board_path %>


<br>

<div class="boardConfig"> <!-- Beginning of board config -->
  <%= link_to 'New Post', new_board_post_path(@boards.first) %>
  <%= link_to 'New Article', new_board_link_path(@boards.first) %>
  <br>
  <br>

  <% @posts.each do |post| %>
    <div class="content">
      <div><h3><%=  post.title %></h3></div>
      <div><%=  post.source %> </div>
      <div><%= link_to 'Show', board_post_path(@boards.first, post) %> </div>
    </div>
  <% end %>

  <% @links.each do |link| %>
    <div class="content">
      <div><%= image_tag link.img_source, :class => "style_image" %></div>
      <div><%= link.title %></div>
      <div><%= link_to 'Show', board_link_path(@boards.first, link) %></div>
    </div>
  <% end %>

  <h3> <%= @boards.first.title %> </h3>
  <div><%= link_to 'Show', @boards.first %></div>
  <div><%= link_to 'Destroy', @boards.first, method: :delete, data: { confirm: 'Are you sure?' } %></div>

  <br>
  <div>

  </div>
</div> <!-- End of board config -->


